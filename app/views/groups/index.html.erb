<div class="container-fluid">
  <div class="row main-title">
    <div class="col-8">
        <span class="title ml-5">All groups</span>
    </div>
    <div class="col-4">
        <%= render 'shared/toggler' %>
    </div>
  </div>
</div>

<div class="container">

    <% @groups.each do |group| %>
    <div class="row">
      <div class="col-2">
          <%= image_tag group.picture.url, size: "50x50" if group.picture? %>
      </div>
      <div class="col-4">
        <h3><%= group.name %></h3>
      </div>
      <div class="col-4">
            <h4><%= group.created_at %></h4>
            <%= link_to "Go to group", group_path(group), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>

</div>
